# Environment Variables for Signal Garden

# Development Settings
NODE_ENV=development

# Web Gesture Debugging (Web only)
EXPO_PUBLIC_DEBUG_WEB=false
EXPO_PUBLIC_SHOW_GESTURE_DEBUG=false
EXPO_PUBLIC_GESTURE_LOG_LEVEL=info

# Performance Monitoring
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Game Settings
EXPO_PUBLIC_ENABLE_DEBUG_OVERLAYS=false

# Examples for different environments:
#
# Development with full web debugging:
# EXPO_PUBLIC_DEBUG_WEB=true
# EXPO_PUBLIC_SHOW_GESTURE_DEBUG=true
# EXPO_PUBLIC_GESTURE_LOG_LEVEL=debug
#
# Production:
# NODE_ENV=production
# EXPO_PUBLIC_DEBUG_WEB=false
# EXPO_PUBLIC_SHOW_GESTURE_DEBUG=false
# EXPO_PUBLIC_GESTURE_LOG_LEVEL=error